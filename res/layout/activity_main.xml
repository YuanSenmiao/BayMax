<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:baymax="http://schemas.android.com/apk/res/com.life.baymax"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="50dp"
        android:background="#ff0099FF"
       >
       </LinearLayout>
    
   <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"     
        android:layout_height="0dp"
        android:layout_weight="1" >
   </android.support.v4.view.ViewPager>
   
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal"
        android:background="@drawable/tab_bg"
       >
        <com.life.baymax.ChangeColorIconWithText
         android:id="@+id/id_indicator_one"
	     android:layout_width="0dp"
	     baymax:iconTab="@drawable/ic_menu_myplaces"
	     baymax:colorTab="#ff0099FF"
	     baymax:text="Exercise"
	     android:padding="5dp"
	     baymax:text_size="12sp"
	     android:layout_height="fill_parent"
	     android:layout_weight="1"/>
         <com.life.baymax.ChangeColorIconWithText
	         android:id="@+id/id_indicator_two"   
		     android:layout_width="0dp"
		     baymax:iconTab="@drawable/ic_menu_star"
		     baymax:colorTab="#ff0099FF"
		     baymax:text="Health"
		     android:padding="5dp"
		     baymax:text_size="12sp"
		     android:layout_height="fill_parent"
		     android:layout_weight="1"/>
         <com.life.baymax.ChangeColorIconWithText
	         android:id="@+id/id_indicator_three"   
		     android:layout_width="0dp"
		     baymax:iconTab="@drawable/ic_menu_emoticons"
		     baymax:colorTab="#ff0099FF"
		     baymax:text="Learning"
		     android:padding="5dp"
		     baymax:text_size="12sp"
		     android:layout_height="fill_parent"
		     android:layout_weight="1"/>
           <com.life.baymax.ChangeColorIconWithText
             android:id="@+id/id_indicator_four"   
		     android:layout_width="0dp"
		     baymax:iconTab="@drawable/ic_menu_allfriends"
		     baymax:colorTab="#ff0099FF"
		     baymax:text="Rating"
		     android:padding="5dp"
		     baymax:text_size="12sp"
		     android:layout_height="fill_parent"
		     android:layout_weight="1"/>
   </LinearLayout>
	
</LinearLayout>
